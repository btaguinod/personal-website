---
import { SEO } from "astro-seo";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
---

<!doctype html>
<html lang="en">
    <head>
        <SEO
            title="Benedict Taguinod"
            description="A website showcasing my software work and experience"
            openGraph={{
                basic: {
                    title: "Benedict Taguinod's Software Developer Portfolio",
                    type: "website",
                    image: "/preview.png",
                    url: "https://benedict-taguinod.com/",
                },
            }}
        />
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta name="theme-color" content="#000000" />
        <meta
            name="description"
            content="A website showcasing my software work and experience."
        />
        <link rel="manifest" href="/manifest.json" />
        <GoogleFontsOptimizer
            url="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600&display=swap"
        />
    </head>
    <body>
        <slot />
        <style is:global>
            :root {
                --highlight-1: #2aabe8;
                --dark: #0e1212;
                --light: #dbdbdb;
                --subtext: #808080;
                --course-card: #1f2121;

                --regular: 400;
                --semi-bold: 600;

                --intro-first: 1.5s;
                --intro-second: 2s;
                --intro-third: 1s;
                --intro-full: calc(
                    var(--intro-first) + var(--intro-second) +
                        var(--intro-third)
                );

                --body-width: 1140px;
                color-scheme: dark;
            }

            html,
            body {
                font-family: "Cairo", sans-serif;
                margin: 0;
                color: var(--light);
                font-weight: var(--regular);
                background-color: var(--dark);
                scroll-behavior: smooth;
                overflow-y: scroll;
            }

            a {
                text-decoration: none;
                color: inherit;
            }

            /* Hide scrollbar for Chrome, Safari and Opera */
            body::-webkit-scrollbar {
                display: none;
            }

            /* Hide scrollbar for IE, Edge and Firefox */
            body {
                -ms-overflow-style: none;
                /* IE and Edge */
                scrollbar-width: none;
                /* Firefox */
            }

            .highlight {
                color: var(--highlight-1);
                font-weight: var(--semi-bold);
                position: relative;
            }

            .highlight::after {
                position: absolute;
                content: "";
                top: 1.4em;
                background-color: var(--highlight-1);
                width: 100%;

                height: 0.1em;
                left: 0;
                right: 0;
                margin: 0 auto;

                transition: 0.5s;

                transform: scaleX(0);
            }

            .highlight:hover::after {
                transform: scaleX(100%);
                height: 0.1em;
            }

            .icon {
                height: 1em;
                display: block;

                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .page {
                position: relative;
                max-width: var(--body-width);
                min-height: 100vh;

                padding: 0 32px;
                margin: 0 auto;

                overflow: hidden;
            }

            .title {
                position: relative;
                font-size: 72px;
                line-height: 103px;

                width: auto;
                left: 50%;
                transform: translateX(-50%);

                animation: title-intro var(--intro-first) ease;
                animation-fill-mode: both;
            }

            .subtext-2 {
                color: var(--subtext);
                font-size: 36px;
                line-height: 67px;

                animation: subtext-intro var(--intro-second) ease
                    var(--intro-first);
                animation-fill-mode: both;
            }

            .subtext-1 {
                font-size: 36px;
                font-weight: var(--semi-bold);
                line-height: 67px;

                animation: subtext-intro var(--intro-third) ease
                    calc(var(--intro-first) + var(--intro-second));
                animation-fill-mode: both;
            }

            #bar {
                z-index: 1;
                position: fixed;
                bottom: 1px;
                width: 100%;
                height: 5px;
                background-color: var(--highlight-1);

                animation: bar-intro var(--intro-third) ease
                    calc(var(--intro-first) + var(--intro-second));
                animation-fill-mode: both;
            }

            @media only screen and (max-width: 600px) {
                .page-text {
                    max-width: 480px;
                    margin: 0 25px;
                }

                .title {
                    line-height: 78px;
                    margin: 15px 0;
                }

                .subtext-2 {
                    line-height: 42px;
                    margin: 15px 0;
                }

                .subtext-1 {
                    line-height: 42px;
                    margin: 15px 0;
                }
            }

            @keyframes hide {
                0% {
                    height: 0;
                    min-height: 0;
                }

                100% {
                    height: 0;
                    min-height: 0;
                }
            }
            @keyframes title-intro {
                0% {
                    opacity: 0;
                }
            }

            @keyframes subtext-intro {
                0% {
                    opacity: 0;
                }
            }

            @keyframes bar-intro {
                0% {
                    transform: scaleX(0);
                }
            }
        </style>
    </body>
</html>
